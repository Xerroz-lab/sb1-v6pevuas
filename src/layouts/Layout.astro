---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="FitLife - Guide complet de fitness et nutrition pour transformer votre vie" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: #2563eb;
		--accent-light: #60a5fa;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #ffffff;
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		padding: 0;
	}
	* {
		box-sizing: border-box;
	}
</style>